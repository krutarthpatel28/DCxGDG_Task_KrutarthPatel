<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Explore Ghibli Films</title>
<link rel="stylesheet" href="/style/styles.css" />
<script type="text/javascript" src="/js/darkmode.js" defer></script>
<style>
.explore-section {
  max-width: 1200px;
  margin: 2rem auto;
  padding: 0 1.5rem;
}
.explore-section h2 {
  font-size: 2.5rem;
  font-weight: 900;
  margin-bottom: 1.5rem;
  color: var(--color-primary);
  text-align: center;
}
.search-form {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}
.search-form input {
  padding: 0.6rem 1rem;
  border-radius: 25px;
  border: 2px solid var(--color-secondary);
  font-size: 1rem;
  width: 250px;
  transition: border-color 0.3s;
}
.search-form input:focus {
  outline: none;
  border-color: var(--color-primary);
}
.search-form button {
  padding: 0.6rem 1.2rem;
  border-radius: 25px;
  border: none;
  background-color: var(--color-primary);
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.3s;
}
.search-form button:hover {
  background-color: var(--color-hover);
}
.film-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 2rem;
}
.film-card {
  background-color: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(0,0,0,0.08);
  transition: transform 0.3s;
  position: relative;
}
.film-card:hover {
  transform: translateY(-5px);
}
.film-card img {
  width: 100%;
  height: 150px;
  object-fit: cover;
}
.film-content {
  padding: 1rem;
}
.film-title {
  font-size: 1.2rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: var(--color-primary);
}
.film-description {
  font-size: 0.9rem;
  color: #444;
  margin-bottom: 1rem;
}
.film-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 1rem;
}
.rating-select {
  padding: 0.3rem;
  border-radius: 8px;
  border: 1px solid var(--color-secondary);
  font-size: 0.9rem;
}
.add-favorite-btn {
  background-color: var(--color-primary);
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  cursor: pointer;
  font-weight: 600;
  font-size: 0.9rem;
  transition: background-color 0.3s;
}
.add-favorite-btn:hover {
  background-color: var(--color-hover);
}
.no-results {
  text-align: center;
  color: #888;
  font-style: italic;
  font-size: 1.1rem;
  margin-top: 2rem;
}
.darkmode .film-card {
  background-color: var(--color-light);
}
.darkmode .film-card .film-title {
  color: var(--color-primary);
}
.darkmode .film-card .film-description {
  color: var(--color-dark);
}
</style>
</head>
<body>
<!-- Navbar -->
<%- include('partials/navbar') %>
<div class="explore-section noto-sans-body">
  <h2 class="mozilla-headline-Title">Explore Studio Ghibli Films</h2>
  <form action="/explore" method="get" class="search-form">
    <input
      type="text"
      name="q"
      placeholder="Search for films..."
      value="<%= query || "" %>"
    />
    <button type="submit">Search</button>
  </form>
  <% if (films.length === 0) { %>
    <div class="no-results">No films found.</div>
  <% } else { %>
    <div class="film-grid">
      <% films.forEach(film => { %>
        <div class="film-card">
          <img src="<%= film.movie_banner || film.image %>" alt="<%= film.title %>" />
          <div class="film-content">
            <div class="film-title"><%= film.title %></div>
            <div class="film-description">
              <%= film.description.substring(0, 100) %>...
            </div>
            <div class="film-actions">
              <select class="rating-select" id="rating-<%= film.id %>">
                <option value="">Rate</option>
                <option value="1">1 ⭐</option>
                <option value="2">2 ⭐</option>
                <option value="3">3 ⭐</option>
                <option value="4">4 ⭐</option>
                <option value="5">5 ⭐</option>
              </select>
              <button class="add-favorite-btn" onclick="addToFavorites('<%= film.title %>', '<%= film.id %>')">
                Add to Favorites
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<script>
async function addToFavorites(title, filmId) {
  const rating = document.getElementById(`rating-${filmId}`).value;
  
  if (!rating) {
    alert('Please select a rating first!');
    return;
  }
  
  try {
    const response = await fetch('/api/favorite', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ title, rating })
    });
    
    const result = await response.json();
    
    if (response.ok) {
      alert(result.message);
      document.getElementById(`rating-${filmId}`).value = ''; // Reset rating
    } else {
      alert(result.message || 'Failed to add to favorites');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Failed to add to favorites');
  }
}
</script>
</body>
</html>